{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "frontend/build",

    "rewrites": [
      {
        "source": "/api/downloadCsv",
        "function": "downloadCsv"
      },
      {
        "source": "/api/notifyEmail",
        "function": "notifyEmail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
